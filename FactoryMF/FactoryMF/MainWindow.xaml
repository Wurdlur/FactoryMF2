<Window x:Class="FactoryMF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FactoryMF"
        mc:Ignorable="d"
        Title="FactoryMF" Height="350" Width="525">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="6*"/>
            <ColumnDefinition Width="4*"/>
        </Grid.ColumnDefinitions>
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="7*"/>
                <RowDefinition Height="3*"/>
            </Grid.RowDefinitions>
            <StackPanel Orientation="Horizontal" Margin="10" Width="200" Height="80" Grid.Row="1">
            <StackPanel>
                <Label FontWeight="Bold">Select a Language</Label>
                <RadioButton IsChecked="True">C#</RadioButton>
                <RadioButton>HTML</RadioButton>
            </StackPanel>
                <Button x:Name="CreateButton"
                    Content="Create"
                    Height="30"
                    Width="60"
                    Margin="10"
                    Click="CreateButton_Click"
                    Background="Chocolate"/>
            </StackPanel>
        </Grid>
        
        </Grid>
</Window>
